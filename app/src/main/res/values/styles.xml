<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>r
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>

        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">8dp</item>

        <item name="android:alpha">.12</item>
        <item name="android:background">?attr/colorOnSurface</item>
    </style>

    <style name="AppTheme.ProjectTypeIndicator">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>

        <item name="android:background">@drawable/ic_circle</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">9dp</item>
        <item name="android:tint">#fff</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
