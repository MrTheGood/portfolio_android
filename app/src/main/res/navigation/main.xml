<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/projectsFragment"
    >

    <fragment
        android:id="@+id/projectsFragment"
        android:name="eu.insertcode.portfolio.ui.project.ProjectsFragment"
        android:label="fragment_projects"
        tools:layout="@layout/fragment_projects"
        >
        <action
            android:id="@+id/action_project_detail"
            app:destination="@id/projectFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>

    <fragment
        android:id="@+id/projectFragment"
        android:name="eu.insertcode.portfolio.ui.project.ProjectFragment"
        android:label="fragment_project"
        tools:layout="@layout/fragment_project"
        >
        <argument
            android:name="project_id" />
    </fragment>

    <deepLink
        android:autoVerify="true"
        app:uri="portfolio.insertcode.eu"
        />

</navigation>