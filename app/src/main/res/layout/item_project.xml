<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_projectSmall_bottom"
        android:layout_marginEnd="@dimen/margin_projectSmall_side"
        android:layout_marginStart="@dimen/margin_projectSmall_side"
        android:layout_marginTop="@dimen/margin_projectSmall_top"
        app:cardBackgroundColor="@color/view_project_background"
        app:cardCornerRadius="2dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <eu.insertcode.portfolio.widgets.ProjectImageView
                android:id="@+id/project_image"
                android:layout_width="94dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/desc_projectThumbnail"
                android:scaleType="centerCrop"
                android:transitionName="@string/trans_projectImage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/project_title"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/insertCode_redLight"
                android:paddingBottom="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/project_image"
                tools:ignore="SelectableText"
                tools:text="Project"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:paddingTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/project_image"
                app:layout_constraintTop_toBottomOf="@id/project_title"
                >

                <TextView
                    android:id="@+id/project_shortDescription"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SelectableText"
                    tools:text="Short example project description for the shortDescription stuff for a project."
                    />

                <TextView
                    android:id="@+id/project_date"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    tools:ignore="SelectableText"
                    tools:text="October 2017"
                    />

                <LinearLayout
                    android:id="@+id/project_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:transitionName="@string/trans_projectTags"
                    />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>