<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"
            />

        <variable
            name="project"
            type="eu.insertcode.portfolio.data.model.Project"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="0dp"
        android:foreground="?selectableItemBackground"
        android:onClick="@{clickListener}"
        android:transitionName="@{project.id}"
        >

        <ImageView
            android:id="@+id/project_image"
            imageFromUrl="@{project.images[0]}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:background="@color/image_background"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/backgrounds/scenic"
            />

        <ImageView
            android:id="@+id/project_typeIndicator"
            style="@style/AppTheme.ProjectTypeIndicator"
            typeIndicator="@{project.type()}"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/project_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/project_title"
            tools:backgroundTint="@color/colorPrimary"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_type_app"
            />

        <TextView
            android:id="@+id/project_title"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{project.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/project_typeIndicator"
            app:layout_constraintTop_toBottomOf="@id/project_image"
            tools:text="@tools:sample/lorem"
            />

        <TextView
            android:id="@+id/project_date"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@{project.date}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/project_title"
            app:layout_constraintStart_toStartOf="@id/project_title"
            app:layout_constraintTop_toBottomOf="@id/project_title"
            tools:text="@tools:sample/date/day_of_week"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
