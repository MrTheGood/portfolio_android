<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_projectSmall_bottom"
        android:layout_marginEnd="@dimen/margin_projectSmall_side"
        android:layout_marginStart="@dimen/margin_projectSmall_side"
        android:layout_marginTop="@dimen/margin_projectSmall_top"
        app:cardBackgroundColor="@color/view_project_background"
        app:cardCornerRadius="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v4.view.ViewPager
                    android:id="@+id/project_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/maxHeight_projectImage"
                    android:background="@color/fragment_project_imageBackground"
                    />

                <android.support.design.widget.TabLayout
                    android:id="@+id/project_image_indicator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/project_image"
                    app:layout_constraintStart_toStartOf="@id/project_image"
                    app:layout_constraintTop_toTopOf="@id/project_image"
                    app:tabBackground="@drawable/viewpager_indicator"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabPadding="2dp"
                    />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/project_title"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:textSize="24sp"
                tools:text="Project Title"
                />

            <TextView
                android:id="@+id/project_date"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="14sp"
                tools:ignore="SelectableText"
                tools:text="October 2017"
                />

            <TextView
                android:id="@+id/project_shortDescription"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                tools:ignore="SelectableText"
                tools:text="Short example project description for the shortDescription stuff for a project."
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                >

                <LinearLayout
                    android:id="@+id/project_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:transitionName="@string/trans_projectTags"
                    />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>